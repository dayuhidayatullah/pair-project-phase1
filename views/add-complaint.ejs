<%- include('partials/header') %>
<!-- Content-->
<div class="container">
    <h1>Add Location Complaint</h1>
    <form action="/users/<%= user.id %>/tour" method="post">
        <label>Username : <%= user.lastName %></label><br><br>

        <select name="ComplaintId" id="">
            <option value="">--Choose Complaint--</option>
            <% complaint.forEach(e => { %>
                <option value="<%= e.id %>"><%= e.complaint_description %></option>
            <% }) %>
        </select><br><br>
        <button type="submit">Add Complaint</button>
    </form>
</div>
